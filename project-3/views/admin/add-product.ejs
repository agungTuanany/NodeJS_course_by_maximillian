<%- include("../includes/head.ejs") %>
<body>
    <%- include("../includes/navigation.ejs") %>
    <main>
        <form class="product-form" action="/admin/add-product" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input id="title" type="text" name="title" placeholder="Enter the product.." />
            </div>
            <div class="form-control">
                <label for="image">Image URL</label>
                <input id="imageUrl" type="text" name="imageUrl" placeholder="Enter the image URL.." />
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input id="price" type="number" name="price" placeholder="Enter the product price.." step="0.01"/>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea id="description" type="" name="description" rows="5"></textarea>
            </div>
            <button class="btn" type="submit">Add Product</button>
        </form>
    </main>
    <%- include("../includes/end.ejs") %>
